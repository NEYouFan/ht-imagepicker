<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.netease.htimagepicker.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/pick_multi_image"
        android:text="从本地选择多图 (最多9张图)"
        style="@style/MainPageButtonStyle" />
    <Button
        android:id="@+id/pick_single_image"
        android:text="从本地选择单图 (不裁剪)"
        style="@style/MainPageButtonStyle"/>
    <Button
        android:id="@+id/pick_single_image_cut"
        android:text="从本地选择单图 (裁剪)"
        style="@style/MainPageButtonStyle"/>
    <Button
        android:id="@+id/take_photo"
        android:text="相机拍照选择单图 (不裁剪)"
        style="@style/MainPageButtonStyle"/>
    <Button
        android:id="@+id/take_photo_cut"
        android:text="相机拍照选择单图 (裁剪)"
        style="@style/MainPageButtonStyle"/>
    <Button
        android:id="@+id/custom_take_photo"
        android:text="自定义相机拍照选择单图 (不裁剪)"
        style="@style/MainPageButtonStyle"/>
    <Button
        android:id="@+id/custom_take_photo_cut"
        android:text="自定义相机拍照选择单图 (裁剪)"
        style="@style/MainPageButtonStyle"/>
</LinearLayout>
